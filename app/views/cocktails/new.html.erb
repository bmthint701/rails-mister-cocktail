<div class="container">
  <div class="contents">
    <h1>New Cocktail</h1>
    <div class="row">
      <%= simple_form_for @cocktail do |c| %>
      <div class="col-xs-12">
          <%= c.input :name %>
      </div>
    </div>
        <%= c.simple_fields_for :doses do |d| %>
          <%= d.simple_fields_for :dose1 do |e| %>
          <div class="row">
            <div class="col-xs-6">
              <%= e.input :ingredient, collection: Ingredient.all %>
            </div>
            <div class="col-xs-6">
              <%= e.input :description, label: 'Amount' %>
            </div>
          </div>
          <% end %>
          <%= d.simple_fields_for :dose2 do |e| %>
          <div class="row">
            <div class="col-xs-6">
              <%= e.input :ingredient, collection: Ingredient.all %>
            </div>
            <div class="col-xs-6">
              <%= e.input :description %>
            </div>
          </div>
          <% end %>
        <% end %>
        <%= c.button :submit %>
      <% end %>
    </div>
    <%= link_to "Back", root_path %>
  </div>
</div>
